<h2>Subscriptions</h2>
<% for subscription in @subscriptions %>
  <div>
		<h3><%= link_to subscription.name, subscription %></h3>
		Subscribers: <%= subscription.users.count %> <br />
			<% unless subscription.schedule_delivery.nil? %>
	      Latest Delivery: <%= subscription.schedule_delivery.to_s(:long) %><br />
	    <% end %>
		<%= link_to 'Edit', edit_subscription_path(subscription) %>
		<%= link_to 'Destroy', subscription, :confirm => 'Are you sure?', :method => :delete %>
		<%= link_to "Deliver", deliver_subscription_path(subscription), :confirm => "Are you sure?", :method => :post %>
	</div>
<% end %>


<br />

